    "dev": "bun src/cli.ts dev",
    "dev:bun": "bun src/cli.ts dev",
    "start": "bun src/cli.ts dev",
    "prepack": "npm run build",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
