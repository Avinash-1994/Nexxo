{
  "name": "urja",
  "version": "1.0.0-freeze",
  "description": "âš¡ Urja - Energy-powered build tool with AI optimization, Rust native workers, and parallel execution",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "urja": "./dist/cli.js",
    "create-urja": "./dist/create-urja.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:native && tsc -p tsconfig.build.json && node ./scripts/postbuild.js",
    "build:native": "node ./scripts/build_native.js",
    "dev": "node ./dist/cli.js dev",
    "start": "node ./dist/cli.js dev",
    "prepack": "npm run build && node ./scripts/pack.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:repro": "node ./scripts/repro_test.mjs",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:all": "tsc -p tsconfig.build.json && npx tsx tests/config_test.ts && npx tsx tests/bootstrap_test.ts && npx tsx tests/integration_test.ts && npx tsx tests/asset_test.ts && npx tsx tests/federation_core_test.ts && npx tsx tests/core_engine_test.ts && npx tsx tests/framework_verification_test.ts",
    "audit:api-surface": "npx tsx scripts/audit/api-surface.ts",
    "audit:plugin-contract": "npx tsx scripts/audit/plugin-contract.ts",
    "audit:all": "npx tsx scripts/audit/run-all.ts",
    "governance:check": "npm run audit:all",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "keywords": [
    "build-tool",
    "bundler",
    "vite",
    "webpack",
    "esbuild",
    "rust",
    "performance",
    "hmr",
    "hot-reload",
    "react",
    "vue",
    "svelte",
    "typescript",
    "dev-server",
    "ai-powered",
    "parallel",
    "native",
    "fast"
  ],
  "author": "Avinash-1994",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Avinash-1994/urja.git"
  },
  "bugs": {
    "url": "https://github.com/Avinash-1994/urja/issues"
  },
  "homepage": "https://github.com/Avinash-1994/urja#readme",
  "engines": {
    "node": ">=18.0.0"
  },
